@model FlashCards.Models.User
@{
}
<body class="site-theme">

    @{if(ViewBag.NoError == false)
    {
        <p style="color: red;">An error occured.</p>
    }

    }

    <h3>Login</h3>
    <br>
    <form asp-controller="Home" asp-action="Login" method="post">
        <div class="mb-5 row">
            <label asp-for="Username">Username</label>
            <div class="col-sm-3">
                <input asp-for="Username" type="text">
            </div>
        <div />

        <div class="mb-5 row">
            <label asp-for="Password">Password</label>
            <div class="col-sm-3">
                <input asp-for="Password" type="password">
            </div>
        </div>

        <button class="custom-button" type="submit">Login</button>
    </form>
</body>